    private Func<UT, int, string> _rowStyleFunc => (x, i) =>
    {
        string style = "";
        if (x.Typ == "A")
            style += "background-color:#8CED8C";
        if (x.Typ == "M")
            style += "background-color:#E5BDE5";

        return style;
    };

